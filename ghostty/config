font-family = BerkeleyMono Nerd Font
font-size = 20
adjust-cell-height = 25%


# "transparent", "tabs", and "hidden".
macos-titlebar-style=hidden

window-padding-balance=true
window-padding-y=20
window-padding-x=30

adjust-cursor-thickness=4

mouse-hide-while-typing=true

keybind = cmd+s>t=toggle_quick_terminal
quick-terminal-animation-duration=0
quick-terminal-position=center

# Keybind that triggers ctrl+s>T (prefix in tmux + T to trigger Sesh)
keybind = cmd+k=text:\x13T

# Switch to last tmux session with Cmd+L (sends Ctrl+S followed by L)
keybind = cmd+l=text:\x13L
# Switch to last tmux session with Cmd+L (sends Ctrl+S followed by L)
keybind = cmd+e=text:\x13E

keybind = cmd+s>r=reload_config

clipboard-paste-protection=false

# Auto-switching themes managed by centralized theme system
theme = light:light,dark:dark

